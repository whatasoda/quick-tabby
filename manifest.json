{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.1.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms",
    "offscreen"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-light-16.png",
      "32": "icons/icon-light-32.png",
      "48": "icons/icon-light-48.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "__MSG_manifest_commandExecuteAction__"
    },
    "open-popup": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "__MSG_manifest_commandOpenPopup__"
    },
    "move-tab-left": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": "__MSG_manifest_commandMoveTabLeft__"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "__MSG_manifest_commandMoveTabRight__"
    }
  }
}
