{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "0.2.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms",
    "offscreen"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-light-16.png",
      "32": "icons/icon-light-32.png",
      "48": "icons/icon-light-48.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "__MSG_manifest_commandExecuteAction__"
    },
    "open-popup-all-windows": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "__MSG_manifest_commandAllWindows__"
    },
    "open-popup-current-window": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "__MSG_manifest_commandCurrentWindow__"
    }
  }
}
