{
  "manifest_version": 3,
  "name": "QuickTabby",
  "version": "0.1.0",
  "description": "Fast tab switching sorted by recently used. Navigate tabs with keyboard shortcuts.",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms",
    "offscreen"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-light-16.png",
      "32": "icons/icon-light-32.png",
      "48": "icons/icon-light-48.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Open QuickTabby popup"
    },
    "open-popup-all-windows": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Open popup (All Windows mode)"
    },
    "open-popup-current-window": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Open popup (Current Window mode)"
    }
  }
}
